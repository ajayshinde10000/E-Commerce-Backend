<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Bootstrap demo</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-4bw+/aepP/YC94hEpVNVgiZdgIC5+VKNBQNGCHeKRQN+PtmoHDEXuppvnDJzQIu9" crossorigin="anonymous">
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        @media print {
          .print-size {
            width: 100%;
            height: 100%;
            font-size: 16px;
          }
        }
      </style>
</head>
  <body>
   
    <div class="mx-auto max-w-4xl sm:px-6 lg:px-8">
        <div class="bg-white">
            <div class="mx-auto max-w-7xl px-6 py-5 sm:py-32 sm:flex sm:items-center sm:justify-between lg:px-8">
              <div>
                  <h2 class="text-xl font-bold tracking-tight text-gray-900 sm:text-4xl">Invoice: #{{this.transactionNo}}</h2>
              </div>
              <div class="mt-10 flex flex-column text-left items-start sm:text-end  sm:items-end gap-x-6 lg:mt-0 lg:flex-shrink-0">
                <img class="h-10 w-auto print-hide" src="https://tailwindui.com/img/logos/mark.svg?color=indigo&shade=600" alt="Your Company">
                <p class="font-bold text-xl">AngularMinds PVT LTD.</p>
                <p class="text-md">5th Floor, Sai Shilp Business Centre <br>
                                   Sr. No. 79, Balewadi Phata, Baner Rd, Lalit Estate, Baner, Pune,</p>
                <p>Maharashtra 411045</p>
              </div>
            </div>
          </div>

          <!-- Billing Address Section -->
          <div class="bg-white">
            <div class="mx-auto max-w-7xl px-6 py-0 sm:py-32 lg:px-8">
              <h2 class="text-3xl font-bold tracking-tight text-gray-900 sm:text-xl">Bill To</h2>
              <div class="mt-0 flex items-center gap-x-6">
                {{this.address.street}}, India <br>
                {{this.address.addressLine2}}, <br>
                {{this.address.city}}, IN {{this.address.pin}}<br>
                {{this.address.state}}
              </div>
            </div>
          </div>
          
          <!-- List Of Products Here -->
          <div class="px-4 sm:px-6 lg:px-8">
    
            <div class="mt-0 flow-root">
              <div class="my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
                <div class="inline-block min-w-full py-2 align-middle sm:px-6 lg:px-8">
                  
                    <table class="mt-3 mb-5 w-[96%] whitespace-nowrap text-left text-sm leading-6">
                        <colgroup>
                          <col class="w-full">
                          <col>
                          <col>
                          <col>
                        </colgroup>
                        <thead class="border-b border-gray-200 text-gray-900">
                          <tr>
                            <th scope="col" class="px-0 py-3 font-semibold">Item</th>
                            <th scope="col" class="py-3 pl-8 pr-0 text-right font-semibold sm:table-cell">Price</th>
                            <th scope="col" class="py-3 pl-8 pr-0 text-right font-semibold sm:table-cell">Qty</th>
                            <th scope="col" class="py-3 pl-8 pr-0 text-right font-semibold">Discount</th>
                            <th scope="col" class="py-3 pl-8 pr-0 text-right font-semibold">Total</th>
                        </tr>
                        </thead>
                        <tbody>
                        {{#each items}}
                          <tr class="border-b border-gray-100">
                            <td class="max-w-0 px-0 py-3 align-top truncate font-medium text-gray-900">
                              {{this.name}}
                            </td>
                            <td class="py-3 pl-8 pr-0 text-right align-top tabular-nums text-gray-700 sm:table-cell">{{this.price}}</td>
                            <td class="py-3 pl-8 pr-0 text-right align-top tabular-nums text-gray-700 sm:table-cell">{{this.quantity}}</td>
                            <td class="py-3 pl-8 pr-0 text-right align-top tabular-nums text-gray-700">{{this.discountPrice}}</td>
                            <td class="py-3 pl-8 pr-0 text-right align-top tabular-nums text-gray-700">{{this.subTotal}}</td>
                          </tr>
                          {{/each}}

                        </tbody>
                        <tfoot class="border-t-2 border-sky-300">
                          <tr>
                            <th class="px-0 pb-0 pt-6 font-normal text-gray-700 sm:hidden">Subtotal</th>
                            <th scope="row" colspan="4" class="hidden px-0 pb-0 pt-6 text-right font-normal text-gray-700 sm:table-cell">Subtotal</th>
                           
                            <td class="pb-0 pl-8 pr-0 pt-6 text-start tabular-nums text-gray-900">₹{{this.finalSubtotal}}</td>
                          </tr>
                          <tr>
                            <th scope="row" class="pt-4 font-normal text-gray-700 sm:hidden">Delivery Fee</th>
                            <th scope="row" colspan="4" class="hidden pt-4 text-right font-normal text-gray-700 sm:table-cell">Tax</th>
                            <td class="pb-0 pl-8 pr-0 pt-4 text-start tabular-nums text-gray-900">₹{{this.deliveryFee}}</td>
                          </tr>
                          <tr>
                            <th scope="row" class="pt-4 font-semibold text-gray-900 sm:hidden">Total</th>
                            <th scope="row" colspan="4" class="hidden pt-4 text-start font-semibold text-gray-900 sm:table-cell">Total</th>
                            <td class="pb-0 pl-8 pr-0 pt-4 text-start font-semibold tabular-nums text-gray-900">₹{{this.total}}</td>
                          </tr>
                        </tfoot>
                      </table>

                </div>
              </div>
            </div>
          </div>

         
    
    
    </div>


    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.8/dist/umd/popper.min.js" integrity="sha384-I7E8VVD/ismYTF4hNIPjVp/Zjvgyol6VFvRkX/vR+Vc4jQkC+hVqc2pM8ODewa9r" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.min.js" integrity="sha384-Rx+T1VzGupg4BHQYs2gCW9It+akI2MM/mndMCy36UVfodzcJcF0GGLxZIzObiEfa" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.1/dist/js/bootstrap.bundle.min.js" integrity="sha384-HwwvtgBNo3bZJJLYd8oVXjrBZt8cqVSpeBNS5n7C8IVInixGAoxmnlMuBnhbgrkm" crossorigin="anonymous"></script>
  </body>
</html>